<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="35dp"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/et_phone_binding"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/account_phone_hint"
            android:paddingLeft="64dp"
            android:textSize="@dimen/font_size_14"
            android:background="@drawable/account_line_et_bg"/>

        <LinearLayout
            android:id="@+id/btn_phone_binding_prefix"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            style="@style/common_btn_ripple_bg">

            <TextView
                android:id="@+id/tv_phone_binding_prefix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+86"
                android:textColor="@color/color_gray_dark2"
                android:textSize="@dimen/font_size_14" />
            
            <ImageView
                android:layout_width="7dp"
                android:layout_height="6dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/ic_zktz"/>

        </LinearLayout>





    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">


        <EditText
            android:id="@+id/et_phone_binding_code"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:hint="@string/account_code"
            android:textSize="@dimen/font_size_14"
            android:paddingLeft="10dp"
            android:inputType="number"
            android:background="@drawable/account_line_et_bg"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="16dp"
                android:background="@color/color_gray_light1" />

            <Button
                android:id="@+id/btn_phone_binding_get_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/account_get_code"
                android:textSize="@dimen/font_size_14"
                android:textColor="@drawable/account_btn_code_selector"
                android:background="@null"/>

        </LinearLayout>




    </RelativeLayout>

    <EditText
        android:id="@+id/et_phone_binding_password"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:hint="@string/account_login_password"
        android:textSize="@dimen/font_size_14"
        android:paddingLeft="10dp"
        android:visibility="gone"
        android:background="@drawable/account_line_et_bg"/>

    <Button
        android:id="@+id/btn_phone_binding_next_steps"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="63dp"
        android:text="@string/account_next_step"
        android:visibility="gone"
        style="@style/btn_corner_blue_blue"/>

</LinearLayout>