<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_gray_light1">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="@string/account_google_verify"
            android:textSize="@dimen/font_size_15"
            android:textColor="@color/color_gray_dark2"/>

        <Switch
            android:id="@+id/sw_google_set"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="15dp"
            android:layout_height="wrap_content"
            android:theme="@style/MySwitch"/>

        <ImageView
            android:id="@+id/btn_google_set"
            android:layout_width="60dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            style="@style/common_btn_ripple_bg"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_google_set_modify"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/common_type_bg_selector">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="@string/account_google_verify_modify"
            android:textSize="@dimen/font_size_15"
            android:textColor="@color/color_gray_dark2"/>

        <ImageView
            android:layout_width="7dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/ic_zc_tz"/>

    </RelativeLayout>
</LinearLayout>