<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TabExchange_TextStyle">
        <item name="android:textSize">@dimen/font_size_15</item>
    </style>

    <style name="TransparentDimBgDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@color/color_transparent</item><!--背景透明-->
    </style>

    <style name="TransparentDialog" parent="TransparentDimBgDialog">
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>
</resources>