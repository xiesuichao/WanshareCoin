<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/color_white"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginLeft="15dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="11dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_sell_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="btc"
                android:textStyle="bold"
                android:textColor="@color/color_gray_dark2"
                android:textSize="@dimen/font_size_15"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textStyle="bold"
                android:textColor="@color/color_gray_dark1"
                android:textSize="@dimen/font_size_15"/>

            <TextView
                android:id="@+id/tv_buy_coin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/color_gray_dark1"
                android:textSize="@dimen/font_size_15"/>

            <TextView
                android:id="@+id/tv_trade_volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:text="011"
                android:textColor="@color/exchange_rise_drop_selector"
                android:textSize="@dimen/font_size_15"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/exchange_amount"
                android:textColor="@color/color_gray_dark1"
                android:textSize="@dimen/font_size_12"/>

            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:textColor="@color/color_gray_dark1"
                android:textSize="@dimen/font_size_12"/>

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:text="Â¥ 0"
                android:textColor="@color/color_gray_dark1"
                android:textSize="@dimen/font_size_12"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_price_limit"
        android:layout_width="70dp"
        android:layout_height="28dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/exchange_btn_rise_drop_selector"
        android:textColor="@color/color_white2"
        android:textSize="@dimen/font_size_15"/>
</LinearLayout>