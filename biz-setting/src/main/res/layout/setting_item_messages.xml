<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_gray_light"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="2018-08-01 17:24"
        android:textColor="@color/color_gray_dark1"
        android:textSize="@dimen/font_size_12" />

    <android.support.v7.widget.CardView
        android:id="@+id/cv_messages_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="6dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="你好，你的XX项目已下线"
                android:textColor="@color/color_gray_dark2"
                android:textSize="@dimen/font_size_15" />


            <TextView
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp"
                android:lines="2"
                tools:text="为了更好的提升我们的服务质量，WanShare平台于2018年5月30日16:00进行系统维护，为了更好的提升我们的服务质量，WanShare平台于2018年5月30日16:00进行系统维护"
                android:textColor="@color/color_gray_dark1"
                android:textSize="@dimen/font_size_12" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>