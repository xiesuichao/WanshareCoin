<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp">

    <RelativeLayout
        android:id="@+id/ll_common_widget_search"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/common_shape_gray_radius15"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_common_search_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_home_search" />

        <ImageView
            android:id="@+id/iv_common_search_input_clear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:visibility="invisible"
            android:src="@drawable/ic_qingkon" />

        <EditText
            android:id="@+id/et_common_search_input"
            android:textColor="@color/color_gray_dark2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="11dp"
            android:layout_toLeftOf="@+id/iv_common_search_input_clear"
            android:layout_toRightOf="@+id/iv_common_search_icon"
            android:background="@null"
            android:hint="@string/common_search"
            android:textColorHint="@color/color_gray_dark"
            android:textSize="@dimen/font_size_15"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:maxLines="1"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_common_search_cancel"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:textColor="@color/color_gray_dark2"
        android:textSize="@dimen/font_size_15"
        android:text="@string/common_cancel" />

</RelativeLayout>