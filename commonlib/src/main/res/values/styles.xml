<resources>

    <style name="my_progress_dialog_theme" parent="common_progress_dialog_theme_base">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="commonProgressDialogMsgTextColor">@color/color_gray_dark</item>
        <item name="commonProgressDialogTextSize">@dimen/progress_dialog_text_size</item>
    </style>

    <style name="common_sheet_dialog_Style" parent="@android:style/Theme.Dialog">
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/common_sheet_dialog_animation</item>
    </style>

    <!-- ActionSheet进出动画 -->
    <style name="common_sheet_dialog_animation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/action_sheet_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/action_sheet_dialog_out</item>
    </style>

    <style name="common_toolbar_style">
        <item name="toolbarBackBtnVisible">true</item>
        <item name="toolbarTitleSize">@dimen/font_size_17</item>
        <item name="toolbarTitleColor">@color/color_gray_dark2</item>
        <item name="toolbarRightBtnTextColor">@color/color_gray_dark2</item>
        <item name="toolbarRightBtnTextSize">@dimen/font_size_15</item>
        <item name="toolbarBackgroundColor">@color/color_white</item>
    </style>

    <style name="common_clear_able_edit_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">49dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:background">@color/color_white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/color_gray_dark2</item>
        <item name="android:textCursorDrawable">@drawable/bg_edit_text_cursor</item>
        <item name="textPaddingLeft">10dp</item>
        <item name="textPaddingRight">10dp</item>
    </style>

    <style name="btn_corner_blue_blue" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/color_white2</item>
        <item name="android:textSize">@dimen/font_size_17</item>
        <item name="android:background">@drawable/common_selector_blue_blue_radius3</item>
    </style>

    <style name="btn_corner_hollow_blue" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/color_main_light</item>
        <item name="android:textSize">@dimen/font_size_17</item>
        <item name="android:background">@drawable/common_selector_hollow_blue_radius3</item>
    </style>

    <style name="ws_app_theme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/activity_anim</item>
    </style>

    <style name="activity_anim">
        <item name="android:activityOpenEnterAnimation">@anim/common_anim_activity_open_in</item>
        <item name="android:activityOpenExitAnimation">@anim/common_anim_activity_open_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/common_anim_activity_close_in</item>
        <item name="android:activityCloseExitAnimation">@anim/common_anim_activity_close_out</item>
    </style>

    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <!-- Active thumb color & Active track color(30% transparency)
            switch 打开时的拇指按钮的颜色 轨迹颜色默认为30%这个颜色 -->
        <item name="colorControlActivated">@color/color_main_light</item>
        <!-- Inactive thumb color switch关闭时的拇指按钮的颜色 -->
        <!--<item name="colorSwitchThumbNormal">@color/switch_normal_color</item>-->
        <!-- Inactive track color(30% transparency) switch关闭时的轨迹的颜色  30%这个颜色 -->
        <!--<item name="android:colorForeground">@color/switch_normal_color</item>-->
        <!--使用方法：
        在布局文件中给需要自定义控件中增加app:theme="@style/MySwitch"-->
    </style>

    <style name="Transparent">
        <item name="android:windowBackground">@color/color_transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <style name="common_btn_corner_red_style" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/color_white2</item>
        <item name="android:textSize">@dimen/font_size_17</item>
        <item name="android:background">@drawable/common_corner_red_red_selector</item>
    </style>

    <style name="common_btn_corner_green_style" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/color_white2</item>
        <item name="android:textSize">@dimen/font_size_17</item>
        <item name="android:background">@drawable/common_corner_green_green_selector</item>
    </style>

    <style name="activity_fullscreen" parent="ws_app_theme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="activity_welcome" parent="activity_fullscreen">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="animTranslate">
        <item name="android:windowEnterAnimation">@anim/translate_in</item>
        <item name="android:windowExitAnimation">@anim/translate_out</item>
    </style>

    <style name="common_btn_ripple_bg" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
</resources>
