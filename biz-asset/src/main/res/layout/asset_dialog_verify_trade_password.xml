<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/common_shape_white_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/asset_fund_pwd_input"
            android:textColor="@color/color_gray_dark2"
            android:textSize="@dimen/font_size_17" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:src="@drawable/ic_my_assets_close" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/common_shape_bg_edit">

            <com.wanshare.common.widget.text.ClearAbleEditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:background="@null"
                android:hint="@string/asset_password"
                android:inputType="textPassword"
                android:maxLength="16"
                android:textColorHint="@color/color_gray_light2"
                app:textPaddingLeft="10dp"
                app:underline_visible="false"
                />
        </FrameLayout>


        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/common_selector_blue_blue_radius3"
            android:text="@string/asset_commit"
            android:textColor="@color/color_white2"
            android:textSize="@dimen/btn_submit_text_size" />
    </LinearLayout>

</LinearLayout>