<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_info_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:background="@drawable/asset_shape_red_top_radius16"
                android:paddingBottom="25dp"
                android:paddingTop="0dp">

                <TextView
                    android:id="@+id/tv_coin_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="40dp"
                    android:textColor="@color/color_white2"
                    android:textSize="@dimen/font_size_15"
                    tools:text="ETH (Ethereum)" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_coin_name"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:drawablePadding="8dp"
                    android:textColor="@color/color_white2"
                    android:textSize="@dimen/font_size_15"
                    android:drawableRight="@drawable/ic_chongbi_copy"
                    tools:text="0xff7dac2f6c*****0a17dacbc9" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_info_top"
                android:background="@drawable/asset_shape_white_bottom_radius16"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_qrcode"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="0dp"
                    android:layout_marginTop="44dp" />

                <TextView
                    android:id="@+id/tv_save_qrcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="25dp"
                    android:textColor="@color/color_red_light"
                    android:textSize="@dimen/font_size_12"
                    android:text="@string/asset_save_qr_code" />

            </LinearLayout>

            <FrameLayout
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:background="@drawable/asset_circle_white" />

                <com.wanshare.common.widget.image.CircleImageView
                    android:id="@+id/civ_logo"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_home_btb"
                    app:shape_type="round" />
            </FrameLayout>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:layout_marginTop="20dp"
            android:text="@string/asset_recharge_explain"
            android:textColor="@color/color_gray_dark"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/tv_explain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="8dp"
            tools:text="@string/asset_recharge_explain_detail"
            android:textColor="@color/color_gray_dark2"
            android:textSize="@dimen/font_size_12" />

    </LinearLayout>
</ScrollView>
