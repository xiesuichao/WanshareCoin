<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="6dp"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:padding="15dp">

        <ImageView
            android:id="@+id/iv_exchange_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_home_jystb" />

        <RelativeLayout
            android:id="@+id/rl_exchange_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/iv_exchange_logo">

            <TextView
                android:id="@+id/tv_exchange_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"

                android:text="火币交易所"
                android:textColor="@color/color_gray_dark2"
                android:textSize="@dimen/font_size_15" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_exchange_name"
                android:src="@drawable/ic_home_xinji" />

            <!--<com.wanshare.common.widget.text.CustomStarLayout-->
            <!--android:id="@+id/cs_exchange_star"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_centerVertical="true" />-->
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_exchange_asset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_exchange_info"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/iv_exchange_logo">

            <TextView
                android:id="@+id/tv_trade_market"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/app_trade_market"
                android:textColor="@color/color_gray_dark"
                android:textSize="@dimen/font_size_12" />

            <TextView
                android:id="@+id/tv_trade_market_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/tv_trade_market"
                android:textColor="@color/color_gray_dark"
                android:textSize="@dimen/font_size_12" />

            <View
                android:id="@+id/view"
                android:layout_width="1dp"
                android:layout_height="13dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_trade_market_num"
                android:background="@color/color_gray_dark" />

            <TextView
                android:id="@+id/tv_exchange_amout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/view"
                android:text="@string/app_amout"
                android:textColor="@color/color_gray_dark"
                android:textSize="@dimen/font_size_12" />

            <TextView
                android:id="@+id/tv_exchange_amout_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/tv_exchange_amout"
                android:textColor="@color/color_gray_dark"
                android:textSize="@dimen/font_size_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@id/tv_exchange_amout_num"
                android:text="@string/app_24h"
                android:textColor="@color/color_gray_dark"
                android:textSize="@dimen/font_size_12" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_exchange_asset"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/iv_exchange_logo">

            <TextView
                android:id="@+id/tv_exchange_tag1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/common_shape_gray_radius10"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/color_gray_dark1"
                android:textSize="@dimen/font_size_12"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_exchange_tag2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@id/tv_exchange_tag1"
                android:background="@drawable/common_shape_gray_radius10"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/color_gray_dark1"
                android:textSize="@dimen/font_size_12"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_exchange_tag3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@id/tv_exchange_tag2"
                android:background="@drawable/common_shape_gray_radius10"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/color_gray_dark1"
                android:textSize="@dimen/font_size_12"
                android:visibility="invisible" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>

