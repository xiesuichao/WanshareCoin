<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="134dp"
            android:background="@drawable/ic_gsshengji">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="21sp"
                android:textColor="@color/color_white2"
                android:text="@string/common_download_find_version"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="41dp"/>

            <TextView
                android:id="@+id/tv_update_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/color_white2"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="21dp"
                android:text="V3.0"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="133dp"
            android:background="@drawable/common_shape_coner_withe_radius6">

            <TextView
                android:id="@+id/tv_update_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="150dp"
                android:lineSpacingExtra="6dp"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="21dp"
                android:text="1.全新配色更改，页面优化设计，权限ui设计
2.全新配色更改，页面优化设计，权限ui设计
3.全新配色更改，页面优化设计，权限ui设计"
                android:textColor="@color/color_gray_dark2_no"
                android:scrollbars="vertical"
                android:fadeScrollbars="false"
                android:scrollbarThumbVertical="@color/white_bg"
                android:textSize="13sp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="21dp"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="20dp">
                <com.wanshare.common.widget.AroundProgressBar
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/pb_update_progress"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    app:textSize="12sp"
                    app:loadingColor="@color/color_main_light"
                    app:stopColor="@color/color_main_light"
                    app:around_radius="18dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/btn_update_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:text="立即升级"
                    android:textColor="@color/white_bg"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:background="@drawable/common_selector_blue_blue_radius18"/>

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>





    <ImageView
        android:id="@+id/btn_update_cancel"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/ic_home_guanbi"/>

</LinearLayout>