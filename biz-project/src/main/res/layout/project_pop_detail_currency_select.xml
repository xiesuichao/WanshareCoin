<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_white"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/cv_project_detail_pop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        app:cardElevation="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="5dp"
        android:background="@color/color_white">

        <LinearLayout
            android:id="@+id/ll_project_detail_pop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/color_white">

            <TextView
                android:id="@+id/tv_project_currency_pop_rmb"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="@drawable/common_selector_white_gray_top_radius3"
                android:gravity="center"
                android:text="@string/project_rmb"
                android:textColor="@color/color_gray_dark2"
                android:textSize="@dimen/font_size_15"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_gray_light" />

            <TextView
                android:id="@+id/tv_project_currency_pop_dollar"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="@drawable/common_selector_white_gray_bot_radius3"
                android:gravity="center"
                android:text="@string/project_dollar"
                android:textColor="@color/color_gray_dark2"
                android:textSize="@dimen/font_size_15" />

        </LinearLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>