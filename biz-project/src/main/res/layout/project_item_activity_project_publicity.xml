<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/color_white"
    >

    <TextView
        android:id="@+id/tv_project_publicity_line"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_white"
        />

    
    <android.support.v7.widget.CardView
        android:id="@+id/cv_project_publicity"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        app:cardCornerRadius="6dp"
        android:background="@color/color_white"
        app:cardElevation="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        >

        <LinearLayout
            android:id="@+id/ll_project_publicity_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/color_white">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical">

                <com.wanshare.common.widget.image.CircleImageView
                    android:id="@+id/iv_project_publicity_logo"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    app:shape_type="round"
                    />

                <TextView
                    android:id="@+id/tv_project_publicity_short_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_15"
                    android:textColor="@color/color_gray_dark2"
                    android:layout_marginLeft="15dp"
                    />

                <TextView
                    android:id="@+id/tv_project_publicity_full_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_12"
                    android:textColor="@color/color_gray_dark1"
                    android:layout_marginLeft="7dp"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_project_publicity_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_12"
                android:textColor="@color/color_gray_dark1"
                android:layout_marginLeft="63dp"
                android:layout_marginTop="15dp"
                />

            <TextView
                android:id="@+id/tv_project_publicity_trade_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_12"
                android:textColor="@color/color_gray_dark1"
                android:layout_marginLeft="63dp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/tv_project_publicity_bot_line"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_gray_light"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                />

            <TextView
                android:id="@+id/tv_project_publicity_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_12"
                android:textColor="@color/color_gray_dark2"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="6dp"
                />

        </LinearLayout>


    </android.support.v7.widget.CardView>



</LinearLayout>