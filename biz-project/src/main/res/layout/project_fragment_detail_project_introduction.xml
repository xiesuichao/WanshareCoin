<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:layout_width="2dp"
            android:layout_height="15dp"
            android:background="@color/color_main_light"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/project_composite_info"
            android:textSize="@dimen/font_size_15"
            android:textColor="@color/color_gray_dark2"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_project_composite_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="@dimen/font_size_12"
        android:textColor="@color/color_gray_dark2"
        android:lineSpacingExtra="8dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_project_introduction_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="17dp"
            android:paddingBottom="17dp"
            android:src="@drawable/ic_xiangmu_zk"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_gray_light"
            android:layout_marginTop="7dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/project_issuance_volume"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/font_size_15"
                android:textColor="@color/color_gray_dark"
                />

            <TextView
                android:id="@+id/tv_project_detail_issue_volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_gray_dark2"
                android:textSize="@dimen/font_size_15"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_gray_light"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/project_issuance_time"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/font_size_15"
                android:textColor="@color/color_gray_dark"
                />

            <TextView
                android:id="@+id/tv_project_detail_issue_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_gray_dark2"
                android:textSize="@dimen/font_size_15"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_gray_light"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/project_online_exchange"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/font_size_15"
                android:textColor="@color/color_gray_dark"
                />

            <TextView
                android:id="@+id/tv_project_detail_volume_online_market"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_gray_dark2"
                android:textSize="@dimen/font_size_15"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_gray_light"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/project_official_website"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/font_size_15"
                android:textColor="@color/color_gray_dark"
                />

            <TextView
                android:id="@+id/tv_project_detail_official_website"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_main_light"
                android:textSize="@dimen/font_size_15"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_gray_light"/>

    </LinearLayout>


</LinearLayout>