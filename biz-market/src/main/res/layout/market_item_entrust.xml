<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="7.5dp"
    android:paddingBottom="7.5dp">

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_centerHorizontal="true"
        android:background="@color/color_gray_light3"
        android:gravity="center"
        android:textColor="@color/color_white2"
        android:textSize="@dimen/font_size_9"
        tools:text="1" />

    <LinearLayout
        android:id="@+id/ll_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/tv_number"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_left_vol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="left|center_vertical"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:textColor="@color/color_gray_dark2"
            android:textSize="@dimen/font_size_12"
            tools:text="0.0423" />

        <TextView
            android:id="@+id/tv_left_price"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="right|center_vertical"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:textColor="@color/color_green_light"
            android:textSize="@dimen/font_size_12"
            tools:text="6856.3876" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@+id/tv_number"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_right_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:textColor="@color/color_red_light"
            android:textSize="@dimen/font_size_12"
            tools:text="6856.3876" />

        <TextView
            android:id="@+id/tv_right_vol"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:textColor="@color/color_gray_dark2"
            android:textSize="@dimen/font_size_12"
            tools:text="0.0423" />


    </LinearLayout>

</RelativeLayout>