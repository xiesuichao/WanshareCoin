<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="255dp"
    android:layout_height="280dp"
    android:orientation="vertical"
    android:background="@drawable/common_corner_stroke_white">
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/common_corner_stroke_gray">


        <RelativeLayout
            android:id="@+id/btn_trade_dialog_reduce"
            android:layout_width="40dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="2dp"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_mkt_reduce"/>

        </RelativeLayout>

        <EditText
            android:id="@+id/et_trade_dialog_input_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:singleLine="true"
            android:gravity="center"
            android:textSize="@dimen/font_size_12"
            android:inputType="numberDecimal"
            android:textColor="@color/color_gray_dark2"
            android:textColorHint="@color/color_gray_dark1"
            android:hint="@string/market_trade_price"/>

        <RelativeLayout
            android:id="@+id/btn_trade_dialog_add"
            android:layout_width="40dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_mkt_plus"/>

        </RelativeLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/et_trade_dialog_input_number"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@drawable/common_corner_stroke_gray"
        android:singleLine="true"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:textSize="@dimen/font_size_12"
        android:inputType="numberDecimal"
        android:textColor="@color/color_gray_dark2"
        android:textColorHint="@color/color_gray_dark1"
        android:hint="@string/market_trade_number"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_12"
            android:textColor="@color/color_gray_dark1"
            android:singleLine="true"
            android:text="@string/market_trade_available_no"/>

        <TextView
            android:id="@+id/tv_trade_dialog_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_12"
            android:layout_marginLeft="8dp"
            android:textColor="@color/color_gray_dark2"
            android:singleLine="true"
            android:text="121313.99999"/>

        <TextView
            android:id="@+id/tv_trade_dialog_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_12"
            android:layout_marginLeft="5dp"
            android:singleLine="true"
            android:textColor="@color/color_gray_dark1"
            android:text="USDT"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/btn_trade_dialog_25"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="25%"
            android:gravity="center"
            android:textColor="@color/color_gray_dark1"
            android:textSize="@dimen/font_size_12"
            android:background="@drawable/common_corner_stroke_gray"/>

        <TextView
            android:id="@+id/btn_trade_dialog_50"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="50%"
            android:gravity="center"
            android:layout_marginLeft="9dp"
            android:textColor="@color/color_gray_dark1"
            android:textSize="@dimen/font_size_12"
            android:background="@drawable/common_corner_stroke_gray"/>

        <TextView
            android:id="@+id/btn_trade_dialog_75"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="75%"
            android:layout_marginLeft="9dp"
            android:gravity="center"
            android:textColor="@color/color_gray_dark1"
            android:textSize="@dimen/font_size_12"
            android:background="@drawable/common_corner_stroke_gray"/>


        <TextView
            android:id="@+id/btn_trade_dialog_100"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="100%"
            android:gravity="center"
            android:layout_marginLeft="9dp"
            android:textColor="@color/color_gray_dark1"
            android:textSize="@dimen/font_size_12"
            android:background="@drawable/common_corner_stroke_gray"/>

    </LinearLayout>
    
    <Button
        android:id="@+id/btn_trade_dialog_commit"
        style="@style/common_btn_corner_green_style"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="20dp"
        android:text="@string/market_trade_buy" />

</LinearLayout>