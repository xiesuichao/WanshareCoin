<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_trade_bar_chart_center_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_15"
            android:textColor="@color/color_green_light"
            android:ellipsize="end"
            android:text=""
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_trade_bar_chart_center_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/font_size_15"
            android:textColor="@color/color_green_light"
            android:ellipsize="end"
            android:gravity="right"
            android:text=""
            android:textStyle="bold" />

    </RelativeLayout>
    <TextView
        android:id="@+id/tv_trade_bar_chart_center_CNY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_gray_dark1"
        android:textSize="@dimen/font_size_11"
        android:layout_marginTop="5dp"
        android:text="" />
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp" />
</LinearLayout>