<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_root_container"
    android:background="@color/color_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="28dp"
            android:layout_centerInParent="true"
            android:orientation="horizontal">
            
            <TextView
                android:id="@+id/tv_favorite_fragment_market"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/favorite_market"
                android:textSize="16sp"
                android:textColor="@color/color_white2"
                android:background="@drawable/common_shape_bg_blue_left_radius4"
                />

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:background="@color/color_main_light"/>

                <TextView
                    android:id="@+id/tv_favorite_fragment_exchange"
                    android:layout_width="match_parent"
                    android:layout_height="26dp"
                    android:gravity="center"
                    android:text="@string/favorite_exchange"
                    android:textSize="16sp"
                    android:textColor="@color/color_main_light"
                    android:background="@color/color_white"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_main_light"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_favorite_fragment_project"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/favorite_project"
                android:textSize="16sp"
                android:textColor="@color/color_main_light"
                android:background="@drawable/common_shape_bg_white_right_radius4"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_favorite_fragment_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/font_size_15"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_colle_edit"/>

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_favorite_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>
