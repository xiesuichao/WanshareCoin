<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="6dp"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/color_white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_favorite_item_exchange_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/font_size_20"
                android:src="@drawable/ic_home_jystb" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_favorite_item_exchange_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="火币全球交易所"
                    android:textColor="@color/color_gray_dark2"
                    android:textSize="15sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/font_size_13"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_favorite_item_exchange_market_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="交易市场8个"
                        android:textColor="@color/color_gray_dark1"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" | "
                        android:textColor="@color/color_gray_dark1"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_favorite_item_exchange_market_volume"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="交易额 258亿/24h"
                        android:textColor="@color/color_gray_dark1"
                        android:textSize="13sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>
